---
import type { PostFrontMatter } from '@/utils/mdx';
import { getImagePath } from '@/utils/image';

interface Props extends PostFrontMatter {}

const { title, summary, publishedAt, slug, image } = Astro.props;

const formattedDate = new Date(publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a
  href={`/blog/${slug}`}
  class="w-full mb-8 hover:bg-gray-100 dark:hover:bg-gray-900 rounded-lg p-4 transition-colors"
>
  <div class="flex flex-col md:flex-row gap-6">
    <div class="w-full md:w-1/3">
      <div class="relative aspect-[16/9] overflow-hidden rounded-lg">
        <img
          src={getImagePath(image)}
          alt={title}
          class="object-cover w-full h-full"
          loading="lazy"
        />
      </div>
    </div>
    <div class="w-full md:w-2/3">
      <div class="flex flex-col md:flex-row justify-between">
        <h4
          class="text-lg md:text-xl font-medium mb-2 w-full text-gray-900 dark:text-gray-100"
        >
          {title}
        </h4>
        <p
          class="text-gray-500 dark:text-gray-400 text-left md:text-right w-32 mb-4 md:mb-0"
        >
          {formattedDate}
        </p>
      </div>
      <p class="text-gray-600 dark:text-gray-400">{summary}</p>
    </div>
  </div>
</a>
